{
  "name": "@veedstudio/subtitle",
  "version": "4.3.1",
  "description": "Library for parsing and manipulating subtitles",
  "repository": {
    "type": "git",
    "url": "https://github.com/veedstudio/subtitle.js"
  },
  "keywords": [
    "subtitle",
    "webvtt",
    "srt",
    "vtt",
    "captions",
    "subrip",
    "parse",
    "parser",
    "stringify",
    "validate",
    "validation",
    "read",
    "write"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "coveralls": "jest --coverage && coveralls < coverage/lcov.info"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "author": "Guilherme Santiago",
  "module": "dist/subtitle.esm.js",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/split2": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "husky": "^4.2.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "strip-bom": "^4.0.0"
  }
}
